
  <div style="height: 1px;"> </div>
  <div class="margin-10-10">
  <%= link_to 'Restaurant', admin_restaurants_path %> |
  <%= link_to 'Categories', admin_categories_path %>
  </div>
  <div class="form-inline margin-10-10" >
  <%= form_for [:admin, @category] do |f| %>
    <div class="form-group margin-10-10">
      <%= f.text_field :name, placeholder: "Category Name",  class: "form-control" %>
    </div>
    <%= f.submit class: "btn btn-primary margin-10-10" %>
  <% end %>
  </div>
  <h1>餐廳分類總表</h1>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Category Name</th>
            <th>Numbers of</th>
            <th>Function</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <th scope="row"><%= category.id %></th>
            <td><%= category.name %></td>
            <td><%= category.restaurants.count %></td>
            <td>
              <%= link_to 'Edit', admin_categories_path(category) %>
              <%= link_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: "Are you sure?"} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

